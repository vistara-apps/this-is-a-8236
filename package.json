{
  "name": "task-weaver-ai",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run pre-build-check && npm run type-check && vite build --mode production --logLevel info",
    "build:ci": "npm ci && npm run build",
    "build:fast": "vite build --mode production",
    "build:verify": "npm run build && npm run verify-build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "pre-build-check": "node scripts/pre-build-check.cjs",
    "verify-build": "node scripts/verify-build.cjs",
    "lint": "echo 'Linting skipped - no linter configured'",
    "test": "echo 'Tests skipped - no test framework configured'",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "clean": "rm -rf dist node_modules/.vite",
    "postinstall": "echo 'Dependencies installed successfully'"
  },
  "dependencies": {
    "@stripe/stripe-js": "^2.1.11",
    "@supabase/supabase-js": "^2.38.0",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.263.1",
    "openai": "^4.20.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.17.0",
    "recharts": "^2.8.0",
    "uuid": "^9.0.1",
    "zustand": "^4.4.4"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.11",
    "terser": "^5.44.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.4"
  }
}
